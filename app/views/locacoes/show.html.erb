<%- model_class = Locacao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cliente_id) %>:</strong></dt>
  <dd><%= @locacao.cliente_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:veiculo_id) %>:</strong></dt>
  <dd><%= @locacao.veiculo_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_diaria) %>:</strong></dt>
  <dd><%= @locacao.valor_diaria %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_desconto) %>:</strong></dt>
  <dd><%= @locacao.valor_desconto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quilometragem_inicial) %>:</strong></dt>
  <dd><%= @locacao.quilometragem_inicial %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quilometragem_final) %>:</strong></dt>
  <dd><%= @locacao.quilometragem_final %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_locacao) %>:</strong></dt>
  <dd><%= @locacao.data_locacao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_devolucao) %>:</strong></dt>
  <dd><%= @locacao.data_devolucao %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              locacoes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_locacao_path(@locacao), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              locacao_path(@locacao),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
