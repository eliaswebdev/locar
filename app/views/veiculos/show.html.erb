<%- model_class = Veiculo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:marca) %>:</strong></dt>
  <dd><%= @veiculo.modelo.marca.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:modelo_id) %>:</strong></dt>
  <dd><%= @veiculo.modelo.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:placa) %>:</strong></dt>
  <dd><%= @veiculo.placa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quilometragem) %>:</strong></dt>
  <dd><%= @veiculo.quilometragem %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cor) %>:</strong></dt>
  <dd><%= @veiculo.cor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ano_fabricacao) %>:</strong></dt>
  <dd><%= @veiculo.ano_fabricacao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ano_modelo) %>:</strong></dt>
  <dd><%= @veiculo.ano_modelo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:portas) %>:</strong></dt>
  <dd><%= @veiculo.portas %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              veiculos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_veiculo_path(@veiculo), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              veiculo_path(@veiculo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
